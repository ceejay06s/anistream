{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.js",
    "jest.setup.js"
  ],
  "ts-node": {
    "exclude": ["**/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
  }
}
